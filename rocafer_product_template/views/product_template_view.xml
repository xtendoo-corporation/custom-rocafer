<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rocafer_product_template_view" model="ir.ui.view">
        <field name="name">rocafer.product.normal.form</field>
        <field name="model">product.template</field>
        <field name="priority">500</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="rocafer_data" string="Rocafer data">
                    <group string="Partner">
                        <group>
                            <field name="res_partner_id" options="{'no_create': True}"></field>
                            <field name="num_partner" widget="char"></field>
                        </group>
                        <group>
                            <field name="label_code"></field>
                        </group>
                    </group>
                    <group string="Order info">
                        <group>
                            <field name="date_order"></field>
                            <field name="register_by"></field>
                        </group>
                        <group>
                            <field name="num_order" widget="char"></field>
                            <field name="num_order_partner" widget="char"></field>
                        </group>
                    </group>

                    <group>
                        <group string="Material">
                            <field name="troquel_number"></field>
                            <field name="figures"></field>
                            <field name="z_imp_cor"></field>
                        </group>
                        <group string="Assembly figures">
                            <field name="y_height"></field>
                            <field name="x_width"></field>
                        </group>
                    </group>
                    <group string="More info">
                        <group>
                            <field name="date_delivery"></field>
                            <field name="amount"></field>
                        </group>
                        <group>
                            <field name="size"></field>
                            <field name="product_material"></field>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="amount_label_exit"></field>
                            <field name="maq_label"></field>
                        </group>
                        <group>
                            <field name="inner_diameter_roll"></field>
                            <field name="outer_diameter_roll"></field>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="product_varnish" options="{'no_create': True}"></field>
                            <field name="product_stamping" options="{'no_create': True}"></field>
                        </group>
                        <group>
                            <field name="product_material" options="{'no_create': True}"></field>
                            <field name="color_variant" options="{'no_create': True}"></field>
                        </group>
                    </group>
                    <group string="Orientation">
                        <group>
                            <field name="print_orientation_id"></field>
                        </group>
                        <group>
                            <field name="image_orientation" widget="image" readonly="1"
                                   options='{"size": [100, 100]}'></field>
                        </group>
                    </group>
                    <group string="Internal notes">
                        <group>
                            <field colspan="2" name="administration_comments" nolabel="1"
                                   placeholder="This note is only for internal purposes."/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
