<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rocafer_product_template_view" model="ir.ui.view">
        <field name="name">rocafer.product.normal.form</field>
        <field name="model">product.template</field>
        <field name="priority">500</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="rocafer_data" string="Rocafer data">
                    <group string="Partner">
                        <group>
                            <field name="res_partner_id" options="{'no_create': True}"/>
                            <!--                            <field name="num_partner" widget="char"/>-->
                        </group>
                        <group>
                            <field name="label_code"/>
                            <!--                            <field name="num_order_partner" widget="char"/>-->
                        </group>
                    </group>
                    <group string="Troquel 1">
                        <group>
                            <field name="troquel_number_1"/>
                            <field name="printing_cylinders"/>
                            <field name="cut_cylinders"/>
                        </group>
                        <group>
                            <field name="assembly_figure_x"/>
                            <field name="assembly_figure_y"/>
                            <field name="troquel_figure"/>
                        </group>
                    </group>
                    <group string="Troquel 2">
                        <group>
                            <field name="troquel_number_2"/>
                        </group>
                        <group>
                            <field name="troquel_figure_2"/>
                        </group>
                    </group>
                    <group string="Production">
                        <group>
                            <field name="label_width"/>
                            <field name="label_height"/>
                            <field name="v_value" readonly="0"/>
                            <field name="h1_value"/>
                            <field name="h2_value"/>
                            <field name="engravings_number"/>
                        </group>
                        <group>
                            <field name="printing_cylinder_size" readonly="0"/>
                            <field name="material_width_separation" readonly="0"/>
                            <field name="amount"/>
                            <field name="linear_meters" readonly="0"/>
                            <field name="tolerance" readonly="0"/>
                        </group>
                    </group>
                    <group string="Printing cylinder">
                        <group>
                            <field name="printing_cylinder_id"/>
                        </group>
                        <group>
                            <field name="z_impression_cylinder"/>
                            <field name="z_magnetic_cut"/>
                        </group>
                    </group>
                    <group string="Materials">
                        <group>
                            <field name="amount_label_exit"/>
                            <field name="inner_diameter_roll"/>
                            <field name="outer_diameter_roll"/>
                            <field name="ink_count"/>
                            <field name="color_ink_ids" widget="one2many_list" mode="tree">
                                <tree options="{'no_create': True}">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="product_material"/>
                            <field name="product_varnish" options="{'no_create': True}"/>
                            <field name="product_stamping" options="{'no_create': True}"/>
                            <field name="laminated"/>
                            <field name="serigraphy"/>
                            <field name="relief"/>
                            <field name="regulatory_council_numbering"/>
                            <field name="other_finishes"/>
                        </group>
                    </group>
                    <group string="Orientation">
                        <group>
                            <field name="print_orientation_id"/>
                        </group>
                        <group>
                            <field name="image_orientation" widget="image" readonly="1"
                                   options='{"size": [100, 100]}'/>
                        </group>
                    </group>
                    <group>
                        <group string="Preprint comments">
                            <field colspan="2" name="preprint_comments" nolabel="1"
                                   placeholder="Add internal comments about the preprint here."/>
                        </group>
                        <group string="Administration comments">
                            <field colspan="2" name="administration_comments" nolabel="1"
                                   placeholder="Add internal administration comments here."/>
                        </group>
                    </group>
                    <group string="Reviewers expedition">
                        <group>
                            <field colspan="2" name="reviewers_expedition" nolabel="1"
                                   placeholder="Add internal notes about the reviewers expedition here."/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
