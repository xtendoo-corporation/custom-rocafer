<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Definicion de la vista-->
    <record id="material_type_action" model="ir.actions.act_window">
        <field name="name">Material</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">material.type</field>
        <field name="help" type="html">
            <tree string="Material type">
                <field name="name"/>
            </tree>
            <p class="o_view_nocontent_smiling_face">
                Create a Material type
            </p>
        </field>
    </record>

    <!--Formulario de edicion-->
    <record id="varnish_type_form" model="ir.ui.view">
        <field name="name">varnish.type.form</field>
        <field name="model">varnish.type</field>
        <field name="arch" type="xml">
        <form string="Varnish type">
            <sheet>
                <group >
                    <field name="name" placeholder="Varnish name"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>

<!--     Boton de actions dentro de  -->
    <menuitem id="menu_rocafer"
              name="Rocafer"
              parent="stock.menu_stock_config_settings"
              sequence="60"
    />

    <menuitem id="varnish_menu"
              name="Varnish type"
              action="varnish_action"
              parent="menu_rocafer" sequence="1"/>

</odoo>
