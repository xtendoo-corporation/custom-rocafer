<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Definicion de la vista-->
    <record id="color_variant_action" model="ir.actions.act_window">
        <field name="name">Color</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">color.variant</field>
        <field name="help" type="html">
            <tree string="Color variant">
                <field name="name"/>
            </tree>
            <p class="o_view_nocontent_smiling_face">
                Create a Color variant
            </p>
        </field>
    </record>

    <!--Formulario de edicion-->
    <record id="color_variant_form" model="ir.ui.view">
        <field name="name">color.variant.form</field>
        <field name="model">color.variant</field>
        <field name="arch" type="xml">
        <form string="Color variant">
            <sheet>
                <group >
                    <field name="name" placeholder="Color name"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>

<!--     Boton de actions dentro de  -->
    <menuitem id="menu_rocafer"
              name="Rocafer"
              parent="stock.menu_stock_config_settings"
              sequence="60"
    />

    <menuitem id="color_menu"
              name="Color variant"
              action="color_variant_action"
              parent="menu_rocafer" sequence="1"/>

</odoo>
