<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Definicion de la vista-->
    <record id="stamping_action" model="ir.actions.act_window">
        <field name="name">Stamping</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">stamping.option</field>
        <field name="help" type="html">
            <tree string="Stamping option">
                <field name="name"/>
            </tree>
            <p class="o_view_nocontent_smiling_face">
                Create a new Stamping
            </p>
        </field>
    </record>

    <!--Formulario de edicion-->
    <record id="stamping_type_form" model="ir.ui.view">
        <field name="name">stamping.option.form</field>
        <field name="model">stamping.option</field>
        <field name="arch" type="xml">
        <form string="Stamping">
            <sheet>
                <group >
                    <field name="name" placeholder="Stamping name"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>

<!--     Boton de actions dentro de  -->
    <menuitem id="menu_rocafer"
              name="Rocafer"
              parent="stock.menu_stock_config_settings"
              sequence="60"
    />

    <menuitem id="stamping_menu"
              name="Stamping"
              action="stamping_action"
              parent="menu_rocafer"
              sequence="1"/>

</odoo>
